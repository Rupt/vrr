{
    "Checks":
        [
            "bugprone-*",
            "clang-diagnostic-*",
            "clang-analyzer-*",
            "google-*",
            "misc-*",
            "performance-*",
            "portability-*",
            "readability-*",
            "-readability-identifier-length",
            "-readability-magic-numbers"
        ],
    "ExtraArgs":
        [
            "-std=gnu23",
            "-pedantic",
            "-Werror",
            "-Wall",
            "-Wextra",
            "-Wconversion",
            "-Walloca",
            "-Wshadow",
            "-Wundef",
            "-Wwrite-strings",
            "-Wvla",
            "-DVRR_INCLUDE_GUARD"
        ],
    "UseColor": false,
    "WarningsAsErrors": "*"
}
